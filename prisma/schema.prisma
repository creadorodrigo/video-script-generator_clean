generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String
  password        String
  generationsUsed Int      @default(0)
  lastReset       DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  patterns VideoPattern[]
  scripts  GeneratedScript[]

  @@map("users")
}

model VideoPattern {
  id          String   @id @default(cuid())
  title       String
  description String?
  videoUrls   Json
  analysis    Json
  tags        String[]
  isFavorite  Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scripts     GeneratedScript[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("video_patterns")
}

model GeneratedScript {
  id                   String        @id @default(cuid())
  newTheme             Json
  settings             Json
  scripts              Json
  consolidatedAnalysis Json
  patternId            String?
  pattern              VideoPattern? @relation(fields: [patternId], references: [id], onDelete: SetNull)
  userId               String
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt            DateTime      @default(now())

  @@index([userId])
  @@index([patternId])
  @@map("generated_scripts")
}
